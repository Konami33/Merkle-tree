# Merkle Tree Service Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Merkle Tree Configuration
SCAN_INTERVAL_MINUTES=5
SOURCE_DIRECTORY=/path/to/your/files
BATCH_SIZE=100

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://merkle_user:your_password@localhost:5432/merkle_db
PG_POOL_SIZE=5
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# Redis Configuration (Caching)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Logging Configuration
LOG_LEVEL=info