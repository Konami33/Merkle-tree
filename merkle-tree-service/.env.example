# Merkle Tree Service Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Merkle Tree Configuration
SCAN_INTERVAL_MINUTES=5
SOURCE_DIRECTORY=/path/to/your/files
BATCH_SIZE=100

# Storage Configuration - Choose between PostgreSQL or S3
# Set S3_ENABLED=true to use MinIO/S3, false for PostgreSQL
S3_ENABLED=true

# PostgreSQL Configuration (Legacy support)
DATABASE_URL=postgresql://merkle_user:your_password@localhost:5432/merkle_db
PG_POOL_SIZE=5
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# MinIO/S3 Configuration
S3_ENDPOINT=localhost
S3_PORT=9000
S3_USE_SSL=false
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=merkle-trees
S3_REGION=us-east-1

# For production with AWS S3, use:
# S3_ENDPOINT=s3.amazonaws.com
# S3_PORT=443
# S3_USE_SSL=true
# S3_ACCESS_KEY=your_aws_access_key
# S3_SECRET_KEY=your_aws_secret_key

# Redis Configuration (Caching)
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Logging Configuration
LOG_LEVEL=info